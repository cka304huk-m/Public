import datetime # импортирую библиотеку с текщей датой.
now = datetime.datetime.today() # текущий год, месяц и день
year_n = now.year # текущий год
month_n = now.month # текущий месяц
day_n = now.day # текущий день
happy_year = input('год рождения: ')
year_sum = (year_n - int(happy_year)) * 365 # отнимаю текущий год от года рождения и умножаю на колличество дней в году.

happy_month = input('месяц рождения: ')
if happy_month == 1 or 3 or 5 or 7 or 8 or 10 or 12: # если месяц равен 1, 3, 5, 7, 8, 10 и 12, то умножаем на 31
    plus = int(happy_month) * 31
elif happy_month == 2: # если месяц равен 2, то умножаем на 28
    plus = int(happy_month) * 28
else:
    plus = int(happy_month) * 30 # в остальных случаях умножаем на 30

month_sum = int(happy_month) - int(month_n)
if month_sum < 0:
    abs(month_sum)
else:
    month_sum = month_sum

happy_day = input('день рождения: ')
day_sum = int(happy_day) - int(day_n)

total = (year_sum - month_sum - day_sum) / 365
print("Вам возраст состовляет - " + str(total))
